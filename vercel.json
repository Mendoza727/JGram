{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "resources/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "/index.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*\\.(?!php).*)", "dest": "/public/$1" },
      { "src": "/(.*\\.php)", "dest": "/index.php" }
    ]
  }
  